#include<bits/stdc++.h>
class Solution {
  public:
    // int f(int day, int last, vector<vector<int>> &arr, vector<vector<int>> &dp){
    //     if(day==0){
    //         int maxi=0;
    //         for(int i=0;i<4;i++){
    //             if(last!=i){
    //                 maxi=max(arr[0][i],maxi);
    //             }
    //         }
    //         return maxi;
    //         if(dp[day][last]!=-1)return dp[day][last];
    //     }
    //     int maxi=0;
    //     for(int task=0;task<4;task++){
    //         if(task!=last){
    //             maxi=max(arr[day][task]+f(day-1,task,arr,dp),maxi);
    //         }
    //     }
    //     return dp[day][last]=maxi;
    // }
    int maximumPoints(vector<vector<int>>& arr) {
        // Code here
        int n=arr.size();
        vector<int> dp(4,0);
        dp[0]=max(arr[0][1],arr[0][2]);
        dp[1]=max(arr[0][0],arr[0][2]);
        dp[2]=max(arr[0][1],arr[0][0]);
        dp[3]=max(arr[0][1],max(arr[0][0],arr[0][2]));
        
        for(int day=1;day<n;day++){
            vector<int>temp(4,0);
            for(int last=0;last<4;last++){
                for(int task=0;task<3;task++){
                    if(task!=last){
                        int point=arr[day][task]+dp[task];
                        temp[last]=max(temp[last],point);
                    }
                }
            }
            dp=temp;
        }
        return dp[3];
        //return f(n-1, 3,arr,dp);
    }
};
