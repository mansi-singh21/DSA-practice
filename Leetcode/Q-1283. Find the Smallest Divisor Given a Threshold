class Solution {
public:
    long long counthr(vector<int>& piles, int k){
        long long hrs=0;
        for(auto p: piles){
            hrs+=(p+k-1)/k;
        }
        return hrs;
    }
    int smallestDivisor(vector<int>& nums, int threshold) {
        long long l,r;
        sort(nums.begin(),nums.end());
        l=1,r=nums[nums.size()-1];
        int ans=r;
        while(l<=r){
            int mid=(l+r)/2;
            long long hr=counthr(nums,mid);
            if(hr<=threshold){
                ans=mid;
                r=mid-1;
            }else{
                l=mid+1;
            }
        }
        return ans;
    }
};
