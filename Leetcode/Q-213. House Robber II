class Solution {
public:
    int rob(vector<int>& nums) {
        int n=nums.size();
        if(n==1) return nums[0];
        if(n==2 || n==3){
            sort(nums.begin(),nums.end());
            return nums[n-1];
        }

        int prev2=nums[0];
        int prev=max(nums[0],nums[1]);
        for(int i=2;i<n-1;i++){
            int curr=max(prev, prev2+nums[i]);
            prev2=prev;
            prev=curr;
        }
        
        int p2=nums[1];
        int p=max(nums[1],nums[2]);
        for(int i=3;i<n;i++){
            int curr=max(p, p2+nums[i]);
            p2=p;
            p=curr;
        }
        
        return max(prev, p);
    }
};
